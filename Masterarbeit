<body>
  <p>Bitte warten… Falls du nicht automatisch weitergeleitet wirst, klicke:</p>
  <p><a id="manual" href="#">Weiter</a></p>

  <script>
    const links = [
      "https://www.youtube.com/watch?v=hcnEfb9Qoc4",
      "https://www.youtube.com/watch?v=IhAXXY4SqW0"
    ];
    const randomLink = links[Math.floor(Math.random() * links.length)];

    // Fallback-Link
    document.getElementById("manual").href = randomLink;

    // Auto-Redirect
    setTimeout(() => window.location.replace(randomLink), 200);
  </script>
</body>
